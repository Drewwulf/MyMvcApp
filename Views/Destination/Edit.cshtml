@model MyMvcApp.Models.PlaceViewModel

        <section class="section">
            <div class="mainDiv">
                <form asp-action="Edit" asp-controller="Destination" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="Name" type="text" placeholder="Змінити назву" class="form-control" />
                    <input asp-for="Address" type="text" placeholder="Змінити адресу" class="form-control"/>
                    <input type="submit" value="Редагувати" class="button" />

                </form>
            </div>
        </section>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }