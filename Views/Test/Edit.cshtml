
@model MyMvcApp.Models.TestViewModel
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Title</title>
        <link rel="stylesheet" href="/CSS/Create.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&display=swap"
            rel="stylesheet" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
            crossorigin="anonymous" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <main>
        <section class="section">
            <div class="mainDiv">
                <form asp-action="Edit" asp-controller="Test" method="post">
                    <input asp-for="Name" type="text" placeholder="Змінити назву">
                    <input asp-for="Description" type="text" placeholder="Змінити опис">
                    <input asp-for="Difficualty" type="text" placeholder="Змінити складність">
                      <select asp-for="DirectionId" class="form-select" aria-label="Default select example">
  @foreach(var direction in Model.directions)
                        {
                            
<option value=@direction.DirectionId>@direction.DirectionName</option>

                        }
                    </select>
                    <input asp-for="TestId" type="hidden" />
                    <input type="submit" value="Редагувати" class="submit">
                </form>
            </div>
        </section>
        </main>
    </body>
</html>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }